{
  "name": "optiroute",
  "version": "1.0.0",
  "description": "RouteIQ - A TypeScript-based route planning and management system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && cp -r src/public dist/",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "dev": "node --loader ts-node/esm --watch src/server.ts",
    "dev:lib": "node --loader ts-node/esm --watch src/index.ts",
    "build:scripts": "tsc -p tsconfig.scripts.json",
    "db:check": "npm run build:scripts && node dist/scripts/check-db-connection.js",
    "pretest": "npm run db:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pretest:e2e": "npm run db:check",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "routing",
    "typescript",
    "route-planning",
    "logistics"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "electron": "^39.2.7",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@types/multer": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2"
  }
}
