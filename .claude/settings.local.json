{
  "permissions": {
    "allow": [
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(chmod:*)",
      "Bash(kill:*)",
      "Bash(pgrep:*)",
      "Bash(lsof:*)",
      "Bash(xargs:*)",
      "Bash(python3:*)",
      "Bash(doctl:*)",
      "Bash(decktape:*)",
      "Bash(code:*)",
      "Bash(sleep:*)",
      "Bash(curl:*)",
      "Bash(echo:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(jq:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(tr:*)",
      "Bash(cut:*)",
      "Bash(basename:*)",
      "Bash(dirname:*)",
      "Bash(realpath:*)",
      "Bash(test:*)",
      "Bash([:*)",
      "Bash(true:*)",
      "Bash(false:*)",
      "Bash(pwd:*)",
      "Bash(date:*)",
      "Bash(timeout:*)",
      "WebFetch(domain:developers.googleblog.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)",
      "Skill(execute)",
      "Skill(spawn-cmd)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/archive-plan.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/review-plan.sh",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/open-plan-preview.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "plansDirectory": ".claude/plans"
}
