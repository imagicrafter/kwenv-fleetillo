{
  "permissions": {
    "allow": [
      "Bash(npm start)",
      "Bash(cat:*)",
      "Bash(npx tsx:*)",
      "Bash(git remote:*)",
      "Bash(git push:*)",
      "Bash(git add:*)",
      "Bash(git reset:*)",
      "Bash(git commit:*)",
      "Bash(wc:*)",
      "Bash(git branch:*)",
      "Bash(git merge:*)",
      "Bash(npm run build:*)",
      "Bash(python3:*)",
      "Bash(doctl apps update:*)",
      "Bash(doctl apps get-deployment:*)",
      "Bash(doctl apps list-deployments:*)",
      "Bash(chmod:*)",
      "Bash(doctl apps list:*)",
      "Bash(doctl apps get:*)",
      "Bash(doctl apps spec get:*)",
      "Bash(doctl apps logs:*)",
      "Bash(doctl apps create-deployment:*)",
      "WebFetch(domain:developers.googleblog.com)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/archive-plan.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/review-plan.sh",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "plansDirectory": ".claude/plans"
}
