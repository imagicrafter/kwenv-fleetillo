# RouteIQ Environment Configuration
# Copy this file to .env and fill in your values
# Do NOT commit .env files with real credentials to version control

# ===========================================
# Supabase Configuration (Required)
# ===========================================

# Your Supabase project URL
# Find this in your Supabase project settings > API
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anonymous (public) key
# Find this in your Supabase project settings > API > Project API keys
SUPABASE_KEY=your-anon-key-here

# Supabase service role key (Optional - for admin operations only)
# WARNING: This key bypasses Row Level Security - use with caution
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database schema to use (defaults to 'routeiq')
SUPABASE_SCHEMA=routeiq

# ===========================================
# Google Maps API Configuration (Required)
# ===========================================

# Google Maps API key for route planning and address validation
# Get this from Google Cloud Console > APIs & Services > Credentials
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# ===========================================
# Application Configuration
# ===========================================

# Application environment: development, production, or test
NODE_ENV=development

# Server port (defaults to 3000)
PORT=3000

# Logging level: debug, info, warn, error (defaults to 'info')
LOG_LEVEL=info

# Enable debug mode (defaults to false)
DEBUG=false

# ===========================================
# Database Configuration (Optional)
# ===========================================

# Direct database connection URL (if not using Supabase client)
# DATABASE_URL=postgresql://user:password@host:port/database

# ===========================================
# API Configuration (Optional)
# ===========================================

# API route prefix (defaults to '/api')
API_PREFIX=/api

# API version (defaults to 'v1')
API_VERSION=v1
